<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.diich.mapper.AuthorityMapper" >
  <resultMap id="BaseResultMap" type="com.diich.core.model.Authority" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="name" property="name" jdbcType="VARCHAR" />
    <result column="status" property="status" jdbcType="INTEGER" />
  </resultMap>
  <sql id="Base_Column_List" >
    id, name, status
  </sql>

  <select id="selectByRoleId" resultMap="BaseResultMap" parameterType="java.lang.Long" >
    select a.*
    from role r
    left join role_authority ra on r.id = ra.target_id
    left join authority a on ra.authority_id = a.id
    where r.id = #{id,jdbcType=BIGINT} and ra.target_table = 'role'
  </select>


</mapper>